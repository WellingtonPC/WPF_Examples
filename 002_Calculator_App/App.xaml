<Application x:Class="_002_Calculator_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_002_Calculator_App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<SolidColorBrush x:Key="numberColor" Color="#444444"/>
		<SolidColorBrush x:Key="operatorColor" Color="orange"/>
		<SolidColorBrush x:Key="textColor" Color="white"/>

        <!-- implicit style apply to all button -->
        <Style TargetType="Button">
            <Setter Property="BorderThickness" Value="5"/>
        </Style>

    </Application.Resources>
</Application>
