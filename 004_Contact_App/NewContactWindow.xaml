<Window x:Class="_004_Contact_App.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_004_Contact_App"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Nome:" FontWeight="Bold"/>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"/>
            <Label Content="E-mail:" FontWeight="Bold"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"/>
            <Label Content="Phone:" FontWeight="Bold"/>
            <TextBox x:Name="phoneTextBox" Margin="0,0,0,5"/>
            <Button Content="Save" Click="Button_Click"/>

        </StackPanel>       
    </Grid>
</Window>
